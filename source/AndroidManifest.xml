<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.dothe.math"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="14"
		android:targetSdkVersion="17" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.example.youdothemath.MainActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.example.youdothemath.PlayGame"
			android:configChanges="keyboardHidden|orientation|screenSize" >
		</activity>
		<activity android:name="com.example.youdothemath.HowToPlay" android:label="Οδηγίες παιχνιδιού.">
		</activity>
		  <activity
                android:name="com.example.youdothemath.About"
                android:label="@string/app_name" android:configChanges="orientation"
                android:finishOnTaskLaunch="true"
                android:theme="@android:style/Theme.Dialog" >
        </activity>
		<activity android:name="com.example.youdothemath.HighScores" android:label="Τα καλύτερα Σκορ!!">
		</activity>
	</application>

</manifest>